@using PersonalWebsite.Data.Entities
<tr class="@(Publication.IsInfluential ? "publication-influential" : "" )">
    <td>
        <div class="pub-title">@Publication.Title</div>
        <div class="pub-authors">
            <ForEachInline Items="@Publication.Authors" Context="author" Separator=",">
                <ItemTemplate>
                    @if (author == Author.Me)
                    {
                        <b>@author</b>
                    }
                    else
                    {
                        @author
                    }
                </ItemTemplate>
            </ForEachInline>
        </div>
        <div class="pub-conf-journal-name">@Publication.ConferenceName</div>
        <div class="pub-meta">
            @if (Publication.LinkToDoi != null)
            {
                <a href="@Publication.LinkToDoi" target="_blank"><span class="tag pub-tag">DOI</span></a>
            }
            @if (Publication.LinkToOpenAccess != null)
            {
                <a href="@Publication.LinkToOpenAccess" target="_blank"><span class="tag pub-tag">Open access</span></a>
            }
            @if (Publication.LinkToConference != null)
            {
                <a href="@Publication.LinkToConference" target="_blank"><span class="tag pub-tag">Conference</span></a>
            }
            @if (Publication.LinkToJournal != null)
            {
                <a href="@Publication.LinkToJournal" target="_blank"><span class="tag pub-tag">Journal</span></a>
            }
            @if (Publication.LinkToCode != null)
            {
                <a href="@Publication.LinkToCode" target="_blank"><span class="tag pub-tag">Code</span></a>
            }
        </div>
    </td>
    <td nowrap>
        <div class="pub-conf-abbrv">@Publication.ConferenceAbbreviation</div>
    </td>
</tr>
@code {
    [Parameter]
    public required Publication Publication { get; init; }
}